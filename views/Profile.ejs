<!DOCTYPE HTML>
<html lang="en/ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/128/3054/3054889.png" type="icon/ico" style="width: auto; height: auto;">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0px;
            padding: 0px;
            overflow-x: hidden;
            background-color: #f9f9f9;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #c4cca6;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            background-color: #f9f9f9;
            padding: 10px 20px;
            border: 2px solid #ccc;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            box-shadow: 2px 2px 2px #555;
            margin-bottom: 20px;
        }

        .profile-info {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .profile-info label {
            flex-basis: 30%;
            margin-bottom: 10px;
        }

        .profile-info input {
            flex-basis: 65%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .profile-details {
            flex-grow: 1;
            position: sticky;
            width: 100%;
            margin-top: 20px;
        }

        .profile-details p {
            margin: 10px 0;
        }

        .profile-details strong {
            font-weight: bold;
            color: #555;
        }

        .profile-details {
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 8px;
            border: 2px solid #ccc;
        }
    </style>
    </head>
    <body>
        <header>
            <!-- User Information -->
            <div class="container">
                <h1>User Information</h1>
                <div class="profile-info">
                    <div class="profile-picture">
                        <!-- Profile Picture -->
                        <img src="profile-picture.jpg" alt="Profile Picture">
                    </div>
                    <div class="profile-details">
                        <!-- User Details -->
                        <p><strong>Username:</strong> JohnDoe</p>
                        <p><strong>Email:</strong> johndoe@example.com</p>
                        <p><strong>Location:</strong> New York City</p>
                        <p><strong>Joined:</strong> January 1, 2022</p>
                    </div>
                </div>
            </div>
        </header>


        <main>
            <!-- Order History -->
            <section class="container">
                <h2>Order History</h2>
                <div class="order-history">
                    <!-- Display Orders with Dropdown for Details -->
                    <div class="order">
                        <p>Order #12345 - Status: Shipping</p>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="orderDropdown1" data-bs-toggle="dropdown" aria-expanded="false">
                                View Details
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="orderDropdown1">
                                <li><a class="dropdown-item" href="#">Order Details</a></li>
                                <li><a class="dropdown-item" href="#">Track Order</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- More Orders... -->
                </div>
            </section>
    
            <!-- Wishlist -->
            <nav class="container">
                <h2>Wishlist</h2>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="wishlistDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        View Wishlist
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="wishlistDropdown">
                        <!-- Wishlist Items -->
                        <li><a class="dropdown-item" href="#">Product 1</a></li>
                        <li><a class="dropdown-item" href="#">Product 2</a></li>
                        <li><a class="dropdown-item" href="#">Product 3</a></li>
                    </ul>
                </div>
            </nav>
    
            <!-- Cart Management -->
            <section class="container">
                <h2>Cart Management</h2>
                <div class="cart">
                    <!-- Cart Items -->
                    <div class="cart-item">
                        <p>Product Name</p>
                        <button class="btn btn-danger">Remove</button>
                    </div>
                    <!-- More Cart Items... -->
                    <!-- Add to Cart Button -->
                    <button class="btn btn-primary">Add to Cart</button>
                </div>
            </section>
    
            <!-- Settings -->
            <section class="container">
                <h2>Settings</h2>
                <div class="settings">
                    <form>
                        <!-- Password Reset -->
                        <div class="mb-3">
                            <label for="password">New Password</label>
                            <input type="password" id="password" class="form-control">
                        </div>
                        <!-- Email Preferences -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="emailNotifications">
                            <label class="form-check-label" for="emailNotifications">Receive Email Notifications</label>
                        </div>
                        <!-- Update Address -->
                        <div class="mb-3">
                            <label for="address">Shipping Address</label>
                            <textarea id="address" class="form-control"></textarea>
                        </div>
                        <!-- Update Contact Numbers -->
                        <div class="mb-3">
                            <label for="contact">Contact Number</label>
                            <input type="text" id="contact" class="form-control">
                        </div>
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </section>
        </main>

        <footer>
        <!-- Logout Button -->
        <div class="container">
            <button class="btn btn-danger">Logout</button>
        </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzDp/i/3A7L+0ETe1jhjVnnXf5Xf2/K1b0P5g5+0Hov/vfZcO5NAhdxg79Y4TV0E" crossorigin="anonymous"></script>

    <nav class="window" style="width: 200px; height: 200px; border: 1px, solid, black">
        <script>
            const menuButton = document.getElementById('menuButton');
            const menuContent = document.querySelector('.menu-content');
            const uploadForm = document.getElementById('profileForm');
            const imageInput = document.getElementById('image-input');
            menuButton.addEventListener('click', toggleMenu);

            function toggleMenu() {
                menuContent.classList.toggle('show');
            }
            const menu = document.getElementById('menu');
            const content = document.querySelector('.content');

            let isMenuOpen = false;

            content.addEventListener('touchstart', handleTouchStart, false);
            content.addEventListener('touchmove', handleTouchMove, false);

            let xDown = null;
            let yDown = null;

            function handleTouchStart(event) {
                xDown = event.touches[0].clientX;
                yDown = event.touches[0].clientY;
            }

            function handleTouchMove(event) {
                if (!xDown || !yDown) {
                    return;
                }

                let xUp = event.touches[0].clientX;
                let yUp = event.touches[0].clientY;

                let xDiff = xDown - xUp;
                let yDiff = yDown - yUp;

                if (Math.abs(xDiff) > Math.abs(yDiff)) { /* Most significant */
                    if (xDiff > 0) {
                        /* left swipe */
                        closeMenu();
                    } else {
                        /* right swipe */
                        openMenu();
                    }
                }

                /* reset values */
                xDown = null;
                yDown = null;
            }

            function openMenu() {
                menu.style.right = '0';
                isMenuOpen = true;
            }

            function closeMenu() {
                menu.style.right = '-200px';
                isMenuOpen = false;
            }
                
            uploadForm.addEventListener('submit', (event) => {
                event.preventDefault();
                const formData = new FormData();
                formData.append('profilePicture', imageInput.files[0]);

                fetch('/uploadProfilePicture', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    // Handle response from the server
                    console.log(data);
                    // Optionally, update UI or redirect to another page
                })
                .catch(error => {
                    console.error('Error uploading profile picture:', error);
                });
            });
        </script>


</body>
</html>